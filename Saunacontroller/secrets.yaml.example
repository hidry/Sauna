# ESPHome Secrets Template
# Copy this file to secrets.yaml and fill in your values
# secrets.yaml is excluded from git for security

# API encryption key for Home Assistant integration
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
api_encryption_key: "YOUR_API_ENCRYPTION_KEY_HERE"

# OTA (Over-The-Air) update password
ota_password: "YOUR_OTA_PASSWORD_HERE"

# WiFi credentials
wifi_ssid: "YOUR_WIFI_SSID"
wifi_password: "YOUR_WIFI_PASSWORD"

# Fallback Access Point credentials
saunacontroller_ap_ssid: "Saunacontroller-Fallback"
saunacontroller_ap_password: "YOUR_AP_PASSWORD"

# Web server authentication
saunacontroller_webserver_user: "admin"
saunacontroller_webserver_password: "YOUR_WEBSERVER_PASSWORD"
